    <!--Barra superior-->

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/h23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/encabezado" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h21"
        app:layout_constraintBottom_toTopOf="@id/h22"
        app:layout_constraintStart_toEndOf="@id/v11"
        app:layout_constraintEnd_toStartOf="@id/v12"
        android:src="@drawable/fondotrueque_encabezado" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tp"
        app:layout_constraintTop_toBottomOf="@id/h21"
        app:layout_constraintBottom_toTopOf="@id/h22"
        app:layout_constraintStart_toEndOf="@id/v11"
        app:layout_constraintEnd_toStartOf="@id/v12"
        style="@style/TinyNormalType" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/map"
        app:layout_constraintBottom_toTopOf="@id/h22"
        app:layout_constraintEnd_toStartOf="@id/v14"
        app:layout_constraintHeight_percent="0.045"
        app:layout_constraintStart_toEndOf="@id/v13"
        app:layout_constraintTop_toBottomOf="@id/h21" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h21"
        app:layout_constraintBottom_toTopOf="@id/h22"
        app:layout_constraintStart_toEndOf="@id/v15"
        app:layout_constraintEnd_toStartOf="@id/v16"
        app:layout_constraintHeight_percent="0.05"
        android:src="@drawable/conf" />


    <!--Barra de búsqueda-->

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h24"
        app:layout_constraintBottom_toTopOf="@id/h25"
        app:layout_constraintStart_toEndOf="@id/v17"
        app:layout_constraintEnd_toStartOf="@id/v18"
        android:src="@drawable/barra_busqueda" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h28"
        app:layout_constraintBottom_toTopOf="@id/h25"
        app:layout_constraintStart_toEndOf="@id/v26"
        app:layout_constraintEnd_toStartOf="@id/v27"
        app:hintTextColor="@color/amarillo"
        app:boxStrokeWidth="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/search"
            android:textColorHint="@color/amarillo"
            android:textColor="@color/black"
            android:fontFamily="@font/inter"
            android:textSize="16sp"
            android:imeOptions="actionSearch" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/scan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h24"
        app:layout_constraintBottom_toTopOf="@id/h25"
        app:layout_constraintStart_toEndOf="@id/v19"
        app:layout_constraintEnd_toStartOf="@id/v20"
        app:layout_constraintHeight_percent="0.033"
        android:src="@drawable/qr" />

    <ImageView
        android:id="@+id/button_search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="ToUpdate"
        android:src="@drawable/lupa"
        app:layout_constraintBottom_toTopOf="@id/h25"
        app:layout_constraintEnd_toStartOf="@id/v24"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintStart_toEndOf="@id/v23"
        app:layout_constraintTop_toBottomOf="@id/h24" />

    <!--Button
        android:id="@+id/button"
