    <!--Contenido y cardviews-->

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/recom"
        android:gravity="left"
        android:textAlignment="gravity"
        app:layout_constraintTop_toBottomOf="@id/h26"
        app:layout_constraintBottom_toTopOf="@id/h27"
        app:layout_constraintStart_toEndOf="@id/v17"
        app:layout_constraintEnd_toStartOf="@id/v22"
        style="@style/TinyNormalType" />

    <TextView
        android:id="@+id/seeAllButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/more"
        android:gravity="right"
        android:textAlignment="gravity"
        app:layout_constraintTop_toBottomOf="@id/h26"
        app:layout_constraintBottom_toTopOf="@id/h27"
        app:layout_constraintStart_toEndOf="@id/v23"
        app:layout_constraintEnd_toStartOf="@id/v25"
