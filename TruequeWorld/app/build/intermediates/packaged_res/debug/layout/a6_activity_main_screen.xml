    <!--Contenido y cardviews-->

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/recom"
        android:gravity="left"
        android:textAlignment="gravity"
        app:layout_constraintTop_toBottomOf="@id/h36"
        app:layout_constraintBottom_toTopOf="@id/h37"
        app:layout_constraintStart_toEndOf="@id/v34"
        app:layout_constraintEnd_toStartOf="@id/v39"
