        app:layout_constraintTop_toBottomOf="@id/h31"
        app:layout_constraintBottom_toTopOf="@id/h32"
        app:layout_constraintStart_toEndOf="@id/v28"
        app:layout_constraintEnd_toStartOf="@id/v29"
        style="@style/TinyNormalType" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/map"
        app:layout_constraintBottom_toTopOf="@id/h32"
        app:layout_constraintEnd_toStartOf="@id/v31"
        app:layout_constraintHeight_percent="0.045"
        app:layout_constraintStart_toEndOf="@id/v30"
        app:layout_constraintTop_toBottomOf="@id/h31" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h31"
        app:layout_constraintBottom_toTopOf="@id/h32"
        app:layout_constraintStart_toEndOf="@id/v32"
        app:layout_constraintEnd_toStartOf="@id/v33"
        app:layout_constraintHeight_percent="0.05"
        android:src="@drawable/conf" />


    <!--Barra de búsqueda-->

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h34"
        app:layout_constraintBottom_toTopOf="@id/h35"
        app:layout_constraintStart_toEndOf="@id/v34"
        app:layout_constraintEnd_toStartOf="@id/v35"
        android:src="@drawable/barra_busqueda" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h38"
        app:layout_constraintBottom_toTopOf="@id/h35"
        app:layout_constraintStart_toEndOf="@id/v43"
        app:layout_constraintEnd_toStartOf="@id/v44"
        app:hintTextColor="@color/amarillo"
        app:boxStrokeWidth="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/search"
            android:textColorHint="@color/amarillo"
            android:textColor="@color/black"
            android:fontFamily="@font/inter"
            android:textSize="16sp"
            android:imeOptions="actionSearch" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/scan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h34"
        app:layout_constraintBottom_toTopOf="@id/h35"
        app:layout_constraintStart_toEndOf="@id/v36"
        app:layout_constraintEnd_toStartOf="@id/v37"
        app:layout_constraintHeight_percent="0.033"
        android:src="@drawable/qr" />

    <ImageView
        android:id="@+id/button_search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="ToUpdate"
        android:src="@drawable/lupa"
        app:layout_constraintBottom_toTopOf="@id/h35"
        app:layout_constraintEnd_toStartOf="@id/v41"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintStart_toEndOf="@id/v40"
