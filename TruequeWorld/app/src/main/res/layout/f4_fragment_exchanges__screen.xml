<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/h502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/encabezado" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h500"
        app:layout_constraintBottom_toTopOf="@id/h501"
        app:layout_constraintStart_toEndOf="@id/v500"
        app:layout_constraintEnd_toStartOf="@id/v501"
        android:src="@drawable/fondotrueque_encabezado" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tp"
        app:layout_constraintTop_toBottomOf="@id/h500"
        app:layout_constraintBottom_toTopOf="@id/h501"
        app:layout_constraintStart_toEndOf="@id/v500"
        app:layout_constraintEnd_toStartOf="@id/v501"
        style="@style/TinyNormalType" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/map"
        app:layout_constraintTop_toBottomOf="@id/h500"
        app:layout_constraintBottom_toTopOf="@id/h501"
        app:layout_constraintStart_toEndOf="@id/v502"
        app:layout_constraintEnd_toStartOf="@id/v503"
        app:layout_constraintHeight_percent="0.045" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h500"
        app:layout_constraintBottom_toTopOf="@id/h501"
        app:layout_constraintStart_toEndOf="@id/v504"
        app:layout_constraintEnd_toStartOf="@id/v505"
        app:layout_constraintHeight_percent="0.05"
        android:src="@drawable/conf" />


    <!--Solicitudes de trueques-->

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h502"
        app:layout_constraintBottom_toTopOf="@id/h503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/clarito"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h504"
        app:layout_constraintBottom_toTopOf="@id/h505"
        app:layout_constraintStart_toEndOf="@id/v506"
        app:layout_constraintEnd_toStartOf="@id/v507"
        android:src="@drawable/circle_bg_notis"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h504"
        app:layout_constraintBottom_toTopOf="@id/h505"
        app:layout_constraintStart_toEndOf="@id/v506"
        app:layout_constraintEnd_toStartOf="@id/v507"
        app:layout_constraintWidth_percent="0.08"
        android:src="@drawable/notis" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/h504"
        app:layout_constraintBottom_toTopOf="@id/h505"
        app:layout_constraintStart_toEndOf="@id/v501"
        app:layout_constraintEnd_toStartOf="@id/v504"
        android:text="@string/exchange_requests"
        style="@style/ThinTypeBlack" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h504"
        app:layout_constraintBottom_toTopOf="@id/h505"
        app:layout_constraintStart_toEndOf="@id/v504"
        app:layout_constraintEnd_toStartOf="@id/v505"
        app:layout_constraintHeight_percent="0.03"
        android:src="@drawable/flecha"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/requests_received"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h502"
        app:layout_constraintBottom_toTopOf="@id/h503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/AlertDialogButtons" />


    <!--Contenido (cardviews)-->

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/x_tp_sent"
        app:layout_constraintTop_toBottomOf="@id/h506"
        app:layout_constraintBottom_toTopOf="@id/h507"
        app:layout_constraintStart_toEndOf="@id/v510"
        app:layout_constraintEnd_toStartOf="@id/v504"
        style="@style/XTP" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRequestsSent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h508"
        app:layout_constraintBottom_toTopOf="@id/h509"
        app:layout_constraintStart_toEndOf="@id/v510"
        app:layout_constraintEnd_toStartOf="@id/v511"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="1" />


    <!--Constraints verticales-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v501"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v502"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v503"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v504"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v505"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v506"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v507"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.21" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v510"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v511"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />


    <!--Constraints horizontales-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.015" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h501"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.075" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h502"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h503"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h504"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h505"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h506"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.239" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h507"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.279" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h508"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.309" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h509"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />

</androidx.constraintlayout.widget.ConstraintLayout>