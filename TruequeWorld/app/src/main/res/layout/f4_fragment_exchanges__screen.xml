<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/h84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/encabezado" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h82"
        app:layout_constraintBottom_toTopOf="@id/h83"
        app:layout_constraintStart_toEndOf="@id/v83"
        app:layout_constraintEnd_toStartOf="@id/v84"
        android:src="@drawable/fondotrueque_encabezado" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tp"
        app:layout_constraintTop_toBottomOf="@id/h82"
        app:layout_constraintBottom_toTopOf="@id/h83"
        app:layout_constraintStart_toEndOf="@id/v83"
        app:layout_constraintEnd_toStartOf="@id/v84"
        style="@style/TinyNormalType" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/map"
        app:layout_constraintTop_toBottomOf="@id/h82"
        app:layout_constraintBottom_toTopOf="@id/h83"
        app:layout_constraintStart_toEndOf="@id/v85"
        app:layout_constraintEnd_toStartOf="@id/v86"
        app:layout_constraintHeight_percent="0.045" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h82"
        app:layout_constraintBottom_toTopOf="@id/h83"
        app:layout_constraintStart_toEndOf="@id/v87"
        app:layout_constraintEnd_toStartOf="@id/v88"
        app:layout_constraintHeight_percent="0.05"
        android:src="@drawable/conf" />


    <!--Solicitudes de trueques-->

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h84"
        app:layout_constraintBottom_toTopOf="@id/h85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/clarito"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h86"
        app:layout_constraintBottom_toTopOf="@id/h87"
        app:layout_constraintStart_toEndOf="@id/v89"
        app:layout_constraintEnd_toStartOf="@id/v90"
        android:src="@drawable/circle_bg_notis"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h86"
        app:layout_constraintBottom_toTopOf="@id/h87"
        app:layout_constraintStart_toEndOf="@id/v89"
        app:layout_constraintEnd_toStartOf="@id/v90"
        app:layout_constraintWidth_percent="0.08"
        android:src="@drawable/notis" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/h86"
        app:layout_constraintBottom_toTopOf="@id/h87"
        app:layout_constraintStart_toEndOf="@id/v84"
        app:layout_constraintEnd_toStartOf="@id/v87"
        android:text="@string/exchange_requests"
        style="@style/ThinTypeBlack" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h86"
        app:layout_constraintBottom_toTopOf="@id/h87"
        app:layout_constraintStart_toEndOf="@id/v87"
        app:layout_constraintEnd_toStartOf="@id/v88"
        app:layout_constraintHeight_percent="0.03"
        android:src="@drawable/flecha"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/requests_received"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h84"
        app:layout_constraintBottom_toTopOf="@id/h85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/AlertDialogButtons" />


    <!--Contenido (cardviews)-->

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/x_tp_sent"
        app:layout_constraintTop_toBottomOf="@id/h88"
        app:layout_constraintBottom_toTopOf="@id/h89"
        app:layout_constraintStart_toEndOf="@id/v91"
        app:layout_constraintEnd_toStartOf="@id/v87"
        style="@style/XTP" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRequestsSent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h90"
        app:layout_constraintBottom_toTopOf="@id/h91"
        app:layout_constraintStart_toEndOf="@id/v91"
        app:layout_constraintEnd_toStartOf="@id/v92"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="1" />

    <FrameLayout
        android:id="@+id/sent_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <!--Constraints verticales-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v84"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v86"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v87"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v88"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v89"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.21" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />


    <!--Constraints horizontales-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h82"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.015" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.075" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h84"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h86"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h87"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h88"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.239" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h89"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.279" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.309" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />

</androidx.constraintlayout.widget.ConstraintLayout>