<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1.5dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/clarito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/saved_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0.55"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                android:background="@color/gris"
                app:srcCompat="@drawable/image_yellow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="25dp"
                android:layout_weight="0.30"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tp_name"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tp_name"
                    style="@style/CardViewTitleType" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tp_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tp_value"
                        style="@style/CardViewNormalType" />

                    <TextView
                        android:id="@+id/tp_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tp_location"
                        android:paddingTop="5dp"
                        style="@style/CardViewNormalType" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/cvSavedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_weight="0.02"
                android:src="@drawable/navbar_saved_button_icon" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>