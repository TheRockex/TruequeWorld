<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvExReceived"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1.5dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/gris"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.9">

                <ImageView
                    android:id="@+id/received_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_weight="0.55"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    android:background="@color/clarito"
                    app:srcCompat="@drawable/image_yellow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="0.50"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/upLogoReceived"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingEnd="45dp"
                        android:paddingBottom="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/elegido_arriba_2" />

                    <TextView
                        android:id="@+id/userWants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        style="@style/CardViewNormalTypeBold" />

                    <TextView
                        android:id="@+id/wantsEx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wants_ex"
                        style="@style/CardViewNormalType2" />


                    <ImageView
                        android:id="@+id/downLogoReceived"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingStart="45dp"
                        android:paddingTop="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/elegido_abajo_2" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/other_wantProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_weight="0.55"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    android:background="@color/clarito"
                    app:srcCompat="@drawable/image_yellow" />

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/big"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                app:dividerColor="@color/black" />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/amarillo"
            android:layout_weight="0.1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/acceptEx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/accept_ex"
                    android:layout_weight="1"
                    style="@style/CardViewButtons" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/tiny"
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    app:dividerColor="@color/black" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/rejectEx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reject_ex"
                    android:layout_weight="1"
                    style="@style/CardViewButtons" />


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>