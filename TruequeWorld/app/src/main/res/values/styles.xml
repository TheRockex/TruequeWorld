<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppNameStyle">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gavoranegrita</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TinyAppNameStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gavoranegrita</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NormalType">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NormalTypeLeft">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="TinyNormalType">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CardViewTitleType">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="CardViewNormalType">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="ThinType">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/amarillo</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="XTP">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/amarillo</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="StartButtons" parent="Widget.Material3.Button">
        <item name="backgroundTint">#BFFFFFFF</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="shapeAppearance">@style/recShape</item>
    </style>

    <style name="AddProductTitleInfo" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#00000000</item>
        <item name="boxStrokeColor">#00000000</item>
        <item name="hintTextColor">@color/amarillo</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="AlertDialogButtons" parent="Widget.Material3.Button">
        <item name="backgroundTint">#00000000</item>
        <item name="boxStrokeColor">#00000000</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="SearchBar" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#00000000</item>
        <item name="hintTextColor">@color/amarillo</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="navBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/white</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemRippleColor">@color/amarillo</item>
        <item name="startIconTint">@color/white</item>
        <item name="android:state_selected">true</item>
        <item name="itemActiveIndicatorStyle">@style/activeIndicator</item>
    </style>

    <style name="activeIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/amarillo</item>
    </style>

    <style name="recShape" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="recShape2" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">0dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/amarillo</item>
        <!-- Add other style attributes as needed -->
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#FFCA41</item>
    </style>

</resources>