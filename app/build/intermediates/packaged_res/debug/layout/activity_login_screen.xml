<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreen"
    android:id="@+id/login_screen"
    android:background="@drawable/desplegable"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <ImageView
            android:id="@+id/close_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_button"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/t_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="45dp"
        android:textColor="@color/black"
        android:text="@string/twlogin"
        android:textAlignment="inherit"
        android:textSize="45dp"
        android:textStyle="bold"
        android:scaleType="fitXY"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/eslogan_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/missu"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:id="@+id/login_image_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_happy" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="90dp"
        android:paddingBottom="40dp">
        <ImageView
            android:id="@+id/login_image_profile"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:src="@drawable/user_profile" />
    </LinearLayout>
    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingBottom="20dp"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/black"
        android:hint="@string/email"
        />
    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingBottom="20dp"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:hint="@string/pass"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:paddingTop="70dp"
        android:paddingBottom="40dp"
        android:gravity="center"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/inicia"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:backgroundTint="#FFFEC941"
            android:textSize="25dp"
            android:textAllCaps="true"/>

    </LinearLayout>



</LinearLayout>